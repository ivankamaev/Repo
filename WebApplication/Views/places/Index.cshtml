@model IEnumerable<WebApplication.Models.place>

@{
    ViewBag.Title = "Места";
}

<h2>Места</h2>

<table class="table">
    <tr>
        <td>@Html.ActionLink("Новое место", "Create")</td>
        <td align="right">@Html.ActionLink("Проекты", "Index", "projects")</td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>@Html.ActionLink("Название", "Index", new { sortOrder = ViewBag.NameSort })</th>
        <th>@Html.ActionLink("Тип", "Index", new { sortOrder = ViewBag.TypeSort })</th>
        <th>Адрес</th>
        <th>@Html.ActionLink("Город", "Index", new { sortOrder = ViewBag.CitySort })</th>
        <th>Телефон</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.placeID }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.placeID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.placeID })
            </td>
        </tr>
    }

</table>
