@model WebApplication.Models.project

@{
    ViewBag.Title = "Создание";
}

<h2>Создание</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input id="projectID" name="projectID" type="hidden" value="@ViewBag.ID" />
        <input id="createrID" name="createrID" type="hidden" value="@ViewBag.createrID" />

        <div class="form-group">
            @Html.Label("Заезд", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
