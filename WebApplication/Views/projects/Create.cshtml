                @Html.ValidationMessageFor(model => model.profit_total, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default " />
            </div>
        </div>
    </div>
}

