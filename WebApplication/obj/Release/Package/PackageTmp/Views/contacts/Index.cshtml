@model IEnumerable<WebApplication.Models.contact>

@{
    ViewBag.Title = "Контакты";
}

<h2>Контакты</h2>

<table class="table">
    <tr>
        <td>@Html.ActionLink("Новый контакт", "Create")</td>
        <td align="right">@Html.ActionLink("Организации", "Index", "organizations")</td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>@Html.ActionLink("Имя", "Index", new { sortOrder = ViewBag.NameSort })</th>
        <th>@Html.ActionLink("Организация", "Index", new { sortOrder = ViewBag.OrganizationSort })</th>
        <th>Телефон</th>
        <th>E-mail</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lastname) @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.organization.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.contactID }) |
                @Html.ActionLink("Подробно", "Details", new { id = item.contactID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.contactID })
            </td>
        </tr>
    }

</table>
